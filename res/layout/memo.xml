<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccffff"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:background="@drawable/b13"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create today"
                android:textColor="#FFCC44"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:id="@+id/foodname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Click Edit Button. Input Food Name."
                android:textColor="#FFCC44"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editfoodname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#CCCCCC"
                android:minEms="10"
                android:text=""
                android:textColor="#FFCC44"
                android:textCursorDrawable="@drawable/cursor_white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="invisible" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp" >

            <TextView
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:text="Click Edit Button. Input memo."
                android:textColor="#FFCC44"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/editnote"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#CCCCCC"
                android:text=""
                android:textColor="#FFCC44"
                android:textCursorDrawable="@drawable/cursor_white"
                android:textSize="28sp"
                android:visibility="invisible" >
            </EditText>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backg"
            android:layout_width="250dp"
            android:layout_height="200dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="horizontal"
        android:padding="20dp" >

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/t7"
            android:text="Edit" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/t7"
            android:text="Confirm" />
    </LinearLayout>

</LinearLayout>